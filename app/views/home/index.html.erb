    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<style>
  :root {
      --primary-color: #C41E3A;
      --secondary-color: #f8f9fa;
  }
  .logo {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 30px;
  }


  .search-box::placeholder {
      color: rgba(255, 255, 255, 0.7);
  }

  .stat-card {
      background: white;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
  }

  .stat-card:hover {
      transform: translateY(-5px);
  }

  .stat-value {
      font-size: 24px;
      font-weight: bold;
      color: var(--primary-color);
  }

  .data-card {
      background: white;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .table-custom {
      background: white;
      border-radius: 10px;
      overflow: hidden;
  }


  .nav-link:hover {
      background: rgba(255, 255, 255, 0.1);
      color: white;
  }
</style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Main Content -->
      <div class="col-md-9 col-lg-10 main-content">
        <div class="row mb-4">
          <div class="col-md-3">
            <div class="stat-card">
              <h6 class="text-muted">Total de Vendas</h6>
              <div class="stat-value">R$ 75.320,00</div>
              <small class="text-success"><i class="fas fa-arrow-up"></i> 12% este mês</small>
            </div>
          </div>
          <div class="col-md-3">
            <div class="stat-card">
              <h6 class="text-muted">Pedidos Concluídos</h6>
              <div class="stat-value">342</div>
              <small class="text-success"><i class="fas fa-arrow-up"></i> 8% este mês</small>
            </div>
          </div>
          <div class="col-md-3">
            <div class="stat-card">
              <h6 class="text-muted">Clientes Ativos</h6>
              <div class="stat-value">128</div>
              <small class="text-success"><i class="fas fa-arrow-up"></i> 5% este mês</small>
            </div>
          </div>
          <div class="col-md-3">
            <div class="stat-card">
              <h6 class="text-muted">Prestadores Ativos</h6>
              <div class="stat-value">57</div>
              <small class="text-success"><i class="fas fa-arrow-up"></i> 3% este mês</small>
            </div>
          </div>
        </div>
        <div class="row mb-4">
          <div class="col-12">
            <div class="data-card">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <input type="text" class="form-control w-50" placeholder="Buscar por cliente, prestador ou serviço...">
                <div class="d-flex gap-2">
                  <select class="form-select">
                    <option>Status</option>
                    <option>Concluído</option>
                    <option>Pendente</option>
                    <option>Cancelado</option>
                  </select>
                  <button class="btn btn-primary">Filtrar</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row mb-4">
          <div class="col-md-6">
            <div class="data-card">
              <h5 class="mb-3"><i class="fas fa-users"></i> Clientes Recentes</h5>
              <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                  João Silva
                  <span class="badge bg-primary rounded-pill">5 pedidos</span>
                </a>
                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                  Maria Santos
                  <span class="badge bg-primary rounded-pill">3 pedidos</span>
                </a>
                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                  Carlos Lima
                  <span class="badge bg-primary rounded-pill">8 pedidos</span>
                </a>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="data-card">
              <h5 class="mb-3"><i class="fas fa-user-tie"></i> Prestadores de Serviço</h5>
              <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                  Ana Souza
                  <span class="badge bg-primary rounded-pill">12 serviços</span>
                </a>
                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                  Pedro Henrique
                  <span class="badge bg-primary rounded-pill">9 serviços</span>
                </a>
                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                  Juliana Costa
                  <span class="badge bg-primary rounded-pill">7 serviços</span>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="data-card">
          <h5 class="mb-3"><i class="fas fa-list"></i> Registros de Vendas</h5>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Cliente</th>
                  <th>Prestador</th>
                  <th>Status</th>
                  <th>Valor</th>
                  <th>Ações</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>1</td>
                  <td>João Silva</td>
                  <td>Ana Souza</td>
                  <td><span class="badge bg-success">Concluído</span></td>
                  <td>R$ 150,00</td>
                  <td>
                    <button class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></button>
                    <button class="btn btn-sm btn-outline-secondary"><i class="fas fa-edit"></i></button>
                  </td>
                </tr>
                <tr>
                  <td>2</td>
                  <td>Maria Santos</td>
                  <td>Pedro Henrique</td>
                  <td><span class="badge bg-warning">Pendente</span></td>
                  <td>R$ 200,00</td>
                  <td>
                    <button class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></button>
                    <button class="btn btn-sm btn-outline-secondary"><i class="fas fa-edit"></i></button>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>