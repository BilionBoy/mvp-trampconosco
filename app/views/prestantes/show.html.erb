<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar Prestante</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @prestante %>">
          <p>
            <strong>Nome:</strong>
            <%= @prestante.nome %>
          </p>
          <p>
            <strong>Categoria:</strong>
            <%= @prestante.categoria %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_prestante_path(@prestante), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", prestantes_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @prestante, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
