<div class="container-fluid mt-md-5  d-md-block ">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 card shadow-lg p-4">
      <div class="text-center mb-4">
        <h2 class="fw-bold">Registrar</h2>
        <p class="text-muted">Preencha as informações abaixo para criar sua conta.</p>
      </div>
      <!-- Flash messages (erros de validação, etc.) -->
      <%= flash[:alert] %>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="row mb-3">
          <div class="col-md-6">
            <%= f.input :email, placeholder: "Email", input_html: { class: "form-control" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :funcao_id, as: :select, collection: Funcao.all.collect { |f| [f.titulo, f.id] }, prompt: "Selecione uma função", input_html: { class: "form-control" } %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-md-6">
            <%= f.input :password, placeholder: "Senha", input_html: { class: "form-control" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :password_confirmation, placeholder: "Confirmar senha", input_html: { class: "form-control" } %>
          </div>
        </div>
        <div class="form-actions mt-3">
          <%= f.button :submit, "Registrar", class: "btn btn-primary w-100" %>
        </div>
        <div class="links mt-3 text-center">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>